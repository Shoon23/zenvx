{
  "name": "zenvx",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "env",
    "environment-variables",
    "configuration",
    "config",
    "dotenv",
    "zod",
    "typescript",
    "validation",
    "schema",
    "type-safe",
    "strict-env",
    "parser",
    "process.env"
  ],
  "license": "MIT",
  "author": {
    "name": "Sean Wilfred T. Custodio",
    "email": "custodiocsean@gmail.com"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/adapters/node.js",
      "require": "./dist/adapters/node.cjs",
      "types": "./dist/adapters/node.d.ts"
    },
    "./vite": {
      "import": "./dist/adapters/vite.js",
      "require": "./dist/adapters/vite.cjs",
      "types": "./dist/adapters/vite.d.ts"
    },
    "./next": {
      "import": "./dist/adapters/next.js",
      "require": "./dist/adapters/next.cjs",
      "types": "./dist/adapters/next.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src --format esm,cjs --dts --external zod,dotenv",
    "dev": "tsup src/index.ts --watch --external zod,dotenv",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "clean": "rimraf dist",
    "test": "vitest run"
  },
  "peerDependencies": {
    "zod": "^4.3.5"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "rimraf": "^5.0.0",
    "tsup": "^8.5.1",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  }
}
